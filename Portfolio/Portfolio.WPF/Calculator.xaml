<Window x:Class="Portfolio.WPF.Calculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Portfolio.WPF"
        mc:Ignorable="d"
        Title="Calculator"
        Height="800"
        Width="450">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="4"
               Content="0"
               FontSize="72"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="5"
               x:Name="lblResult" />
        <Button Grid.Row="1"
                Grid.Column="0"
                Content="AC"
                FontSize="24"
                Margin="5"
                x:Name="btnAC" />
        <Button Grid.Row="1"
                Grid.Column="1"
                Content="+/1"
                FontSize="24"
                Margin="5"
                x:Name="btn" />
        <Button Grid.Row="1"
                Grid.Column="2"
                Content="%"
                FontSize="24"
                Margin="5"
                x:Name="btnPercentage" />
        <Button Grid.Row="1"
                Grid.Column="3"
                Content="/"
                FontSize="24"
                Margin="5"
                x:Name="btnDivision" />
        <Button Grid.Row="2"
                Grid.Column="0"
                Content="7"
                FontSize="24"
                Margin="5"
                x:Name="btnSeven" />
        <Button Grid.Row="2"
                Grid.Column="1"
                Content="8"
                FontSize="24"
                Margin="5"
                x:Name="btnEight" />
        <Button Grid.Row="2"
                Grid.Column="2"
                Content="9"
                FontSize="24"
                Margin="5"
                x:Name="btnNine" />
        <Button Grid.Row="2"
                Grid.Column="3"
                Content="*"
                FontSize="24"
                Margin="5"
                x:Name="btnMultiplication" />
        <Button Grid.Row="3"
                Grid.Column="0"
                Content="4"
                FontSize="24"
                Margin="5"
                x:Name="btnFour" />
        <Button Grid.Row="3"
                Grid.Column="1"
                Content="5"
                FontSize="24"
                Margin="5"
                x:Name="btnFive" />
        <Button Grid.Row="3"
                Grid.Column="2"
                Content="6"
                FontSize="24"
                Margin="5"
                x:Name="btnSix" />
        <Button Grid.Row="3"
                Grid.Column="3"
                Content="-"
                FontSize="24"
                Margin="5"
                x:Name="btnMinus" />
        <Button Grid.Row="4"
                Grid.Column="0"
                Content="1"
                FontSize="24"
                Margin="5"
                x:Name="btnOne" />
        <Button Grid.Row="4"
                Grid.Column="1"
                Content="2"
                FontSize="24"
                Margin="5"
                x:Name="btnTwo" />
        <Button Grid.Row="4"
                Grid.Column="2"
                Content="3"
                FontSize="24"
                Margin="5"
                x:Name="btnThree" />
        <Button Grid.Row="4"
                Grid.Column="3"
                Content="+"
                FontSize="24"
                Margin="5"
                x:Name="btnPlus" />
        <Button Grid.Row="5"
                Grid.Column="0"
                Content="0"
                FontSize="24"
                Grid.ColumnSpan="2"
                Margin="5"
                x:Name="btnZero" />
        <Button Grid.Row="5"
                Grid.Column="2"
                Content="."
                FontSize="24"
                Margin="5"
                x:Name="btnDot" />
        <Button Grid.Row="5"
                Grid.Column="3"
                Content="="
                FontSize="24"
                Margin="5"
                x:Name="btnEqualTo" />
    </Grid>
</Window>
